<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.DetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details_restaurant_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_orange"
        android:paddingBottom="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/details_restaurant_pic"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/details_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Nom Du Restaurant"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_restaurant_pic" />

        <TextView
            android:id="@+id/details_restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999 Adresse du Restaurant"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/details_restaurant_name"
            app:layout_constraintTop_toBottomOf="@id/details_restaurant_name" />

        <ImageView
            android:id="@+id/details_restaurant_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:background="@drawable/round_background"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="@id/details_restaurant_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_restaurant_pic"
            app:tint="@color/pastel_green" />

        <!-- VIEWGROUP FOR STARS !-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@id/details_restaurant_name"
            app:layout_constraintStart_toEndOf="@id/details_restaurant_name"
            app:layout_constraintTop_toTopOf="@id/details_restaurant_name"
            app:tint="@color/yellow" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/details_restaurant_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_top">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:drawableTop="@drawable/ic_phone"
            android:drawableTint="@color/main_orange"
            android:text="CALL"
            android:textColor="@color/main_orange"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_star_details"
            android:drawableTint="@color/main_orange"
            android:text="LIKE"
            android:textColor="@color/main_orange"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:drawableTop="@drawable/ic_website"
            android:drawableTint="@color/main_orange"
            android:text="WEBSITE"
            android:textColor="@color/main_orange"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_restaurant_bot"
        tools:listitem="@layout/item_layout_workmates" />


</androidx.constraintlayout.widget.ConstraintLayout>










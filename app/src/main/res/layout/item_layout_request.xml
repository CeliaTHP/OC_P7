<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Example title for a requested restaurant">

    <TextView
        android:id="@+id/item_request_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white_background"
        android:padding="4dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Example title for a requested restaurant" />

    <TextView
        android:id="@+id/item_request_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white_background"
        android:padding="4dp"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_request_name"
        tools:text="2 rue due zoo 15640" />


</androidx.constraintlayout.widget.ConstraintLayout>
